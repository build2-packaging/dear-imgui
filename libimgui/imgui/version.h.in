#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define LIBIMGUI_VERSION       $libimgui.version.project_number$ULL
#define LIBIMGUI_VERSION_STR   "$libimgui.version.project$"
#define LIBIMGUI_VERSION_ID    "$libimgui.version.project_id$"

#define LIBIMGUI_VERSION_MAJOR $libimgui.version.major$
#define LIBIMGUI_VERSION_MINOR $libimgui.version.minor$
#define LIBIMGUI_VERSION_PATCH $libimgui.version.patch$

#define LIBIMGUI_PRE_RELEASE   $libimgui.version.pre_release$

#define LIBIMGUI_SNAPSHOT_SN   $libimgui.version.snapshot_sn$ULL
#define LIBIMGUI_SNAPSHOT_ID   "$libimgui.version.snapshot_id$"
